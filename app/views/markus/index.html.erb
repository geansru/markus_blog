    <div id="myCarousel" class="carousel slide">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
          <% (1..11).to_a.each do |m| %>
            <li data-target="#myCarousel" data-slide-to="<%= m %>"></li>
          <% end %>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
          <% @markus.each do |m| %>
            <div class="item <%= 'active' if m.id == 1 %>">
              <div class="fill" style="background-image:url('http://placehold.it/1900x1080&text=<%= "#{m.id}"%> month');"></div>
                <div class="carousel-caption">
                  <h1><%= link_to "#{m.id} Месяц", marku_path(m) %></h1>
                </div>
              </div>
            <% end %>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="icon-prev"></span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="icon-next"></span>
        </a>
    </div>

    <!-- JavaScript -->
    <script src="js/bootstrap.js"></script>

    <!-- Script to Activate the Carousel -->
    <script>
    $('.carousel').carousel({
        interval: 5000 //changes the speed
    })
    </script>
