<div class="row">
  <div class="page-header">
     <h1 class="text-center">Блог Марчонка</h1>
  </div>
  <%= render 'layouts/errors'%>

  <div class="col-lg-offset-2 col-md-offset-md-2 col-sm-offset-sm-2 col-lg-8 col-md-8 col-sm-8" style="background-color: #eee; padding: 10 px;" >
    <%= form_for @marku, html: {class: "form-horizontal"} do |f| %>

    <fieldset >
        <legend>Опиши своего Марчонка</legend>

        <div class="form-group">
          <%= f.label :post, 'Сообщение:', class: "col-lg-3 control-label text-left" %>
          <div class="col-lg-9">
            <%= f.text_area :post, class: "form-control", placeholder: "Здесь какой-то текст:)", id: "txtarea" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :weight, 'Вес:', class: "col-lg-3 control-label text-left" %>
          <div class="col-lg-9">
            <%= f.text_field :weight, class: "form-control", placeholder: "Вес в килограммах" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :height, 'Рост: ', class: "col-lg-3 control-label" %>
          <div class="col-lg-9">
            <%= f.password_field :height, class: "form-control", placeholder: "Рост в сантиметрах" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :month, 'Возраст:', class: "col-lg-3 control-label" %>
          <div class="col-lg-9">
            <%= f.password_field :month, class: "form-control", placeholder: "Возраст в месяцах" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :photo, 'Ссылка на фото:', class: "col-lg-3 control-label" %>
          <div class="col-lg-9">
            <%= f.password_field :photo, class: "form-control", placeholder: "Адрес фото" %>
          </div>
        </div>

        <div class="form-group">
          <hr />
          <div class="col-lg-offset-3 col-lg-9">
          <%= f.submit "OK", class: "btn btn-success" %>
          </div>
       </div>

    </fieldset>

    <% end %>
  </div>
</div>
